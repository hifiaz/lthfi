        </div>
      </section>

      <section class="segment large">
        <Heading title="Projects" slug="/projects" />

        <div class="post-preview">
          {projectsList
          .filter((project) => project.highlight)
          .map((project) => {
          return (
          <div class="anchored card" key={project.slug}>
            <div>
              <time>{project.date}</time>
